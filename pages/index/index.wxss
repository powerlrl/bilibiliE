page,swiper,scroll-view,view{
  box-sizing: border-box;
}
.navBar{
  white-space: nowrap;
  padding: 10rpx 30rpx;
}
.navList{
  padding: 10rpx 30rpx;
  display: inline-block;
  font-size: 30rpx;
  color: #555;
}
.active{
  border-bottom: 2px solid #e08a90;
}
.slideShow{
  margin-top: 10rpx;
  height: 240rpx;
}
.slideItem navigator{
  width: 100%;
  height: 100%;
}
.slideItem navigator image{
  width: 100%;
  height: 240rpx;
}
/* 视频列表 */
.videoBar{
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  justify-content: space-between;
}
.videoItem{
  margin-top: 10rpx;
  width: 48%;
  margin-bottom: 20rpx;
}
.videoImg{
  width: 100%;
  position: relative;
}
.videoImg image{
  border-radius: 10rpx;
  width: 100%;
  height: 240rpx;
}
.videoInfo{
  box-sizing: border-box;
  padding: 0 10rpx;
  /* background:red; */
  position: absolute;
  top: 200rpx;
  color: #e8e8e8;
  font-size: 26rpx;
  display: flex;
  width: 100%;
  flex: 2;
}
.videoPlayCount{
  flex: 1;
}
.videoTitle{
  color: #555;
  font-size: 27rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  
}